* {
  border: none;
  color: #D5FF80;
  background-color: #242936;
}

#frame {
  padding: 24px;
  border-radius: 8px;
  background-color: #242936;
  border: 2px solid #D5FF80;

  min-width: 640px;
  max-width: 880px;
}

#inputLine {
  border-radius: 2px;
  font-size: 18px;
  selection-color: #fe8019;
  selection-background-color: #242936;
  background-color: #242936;
}

#settingsButton {
  color: #f8f8f2;
  background-color: #282a36;
  padding: 8px 8px 8px 8px;
  margin: 5px 10px 0 0;

  min-width: 13px;
  min-height: 13px;
  max-width: 13px;
  max-height: 13px;
}

QListView {
  background: transparent;
  selection-color: #fe8019;
}

QListView::item {
    border-radius: 6px;
    padding: 6px;
}

QListView::item:selected {
  border-radius: 8px;
}

QListView QScrollBar:vertical {
  width: 5px;
  background: transparent;
}

QListView QScrollBar::handle:vertical {
  background: #282a36;
  min-height: 24px;
}

QListView QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QListView QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical,
QListView QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
  border: 0px;
  width: 0px;
  height: 0px;
  background: transparent;
}

QListView#actionList {
  font-size: 18px;
}

QListView#actionList::item{
  height: 18px;
}

QListView#resultsList {
  icon-size: 36px;
  font-size: 18px;
}

QListView#resultsList::item{
  height: 48px;
}

