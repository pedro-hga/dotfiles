general {
    interval = 5
}

order += "cpu_usage"
order += "load"
order += "battery"
order += "tztime local"

cpu_usage {
    format = "CPU: %usage"
}

load {
    format = "Load: %1min"
}

battery {
    format = "%status %percentage %remaining"
    last_full_capacity = true
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

