# Status bar setup
set $bg0      #2e3440
set $bg1      #1d3337
set $bg2      #254147
set $bg3      #2d4f56
set $bg4      #0f1c1e
set $bg5      #1E1F29
set $fg0      #d8dee9
set $fg1      #e5e9f0
set $fg2      #eceff4
set $fg3      #bdae93
set $fg4      #a89984
set $yellow   #ebcb8b
set $orange   #d08770
set $red      #bf616a
set $magenta  #d3869b
set $violet   #b48ead
set $blue     #5e81ac
set $cyan     #8fbcbb
set $green    #a3be8c
set $gray     #d8dee9

bar {
    status_command i3blocks
    position top
    tray_padding 6
    colors {
        background $bg0
        statusline $fg0
        separator $cyan
        focused_workspace $yellow $yellow $bg2
        active_workspace $bg1 $bg2 $bg2
        inactive_workspace $bg1 $bg0 $fg1
        urgent_workspace $red $red $bg2
    }
}


# Border colors
client.focused          $bg0 $yellow $bg1 $yellow $yellow
client.focused_inactive $bg1 $bg2 $fg2 $bg3 $bg2
client.unfocused        $bg0 $gray $bg1 $fg3 $bg1
client.urgent           $bg1 $red $fg1 $red $bg1

