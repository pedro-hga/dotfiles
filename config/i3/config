# Status bar setup
set $bg0      #303446
set $bg1      #292c3c
set $bg2      #232634
set $bg3      #414559
set $bg4      #51576d
set $bg5      #626880
set $fg0      #c6d0f5
set $fg1      #b5bfe2
set $fg2      #a5adce
set $fg3      #8c8fa1
set $fg4      #737994
set $yellow   #e5c890
set $orange   #ef9f76
set $red      #e78284
set $magenta  #ea999c
set $violet   #ca9ee6
set $blue     #8caaee
set $cyan     #99d1db
set $green    #a6d189
set $gray     #9ca0b0

bar {
    status_command i3blocks
    position top
    tray_padding 6
    colors {
        background $bg0
        statusline $fg0
        separator $cyan
        focused_workspace $yellow $yellow $bg2
        active_workspace $bg1 $bg2 $bg2
        inactive_workspace $bg1 $bg0 $fg1
        urgent_workspace $red $red $bg2
    }
}


# Border colors
client.focused          $bg0 $yellow $bg1 $yellow $yellow
client.focused_inactive $bg1 $bg2 $fg2 $bg3 $bg2
client.unfocused        $bg0 $gray $bg1 $fg3 $bg1
client.urgent           $bg1 $red $fg1 $red $bg1

